{
  "name": "webpack-stats",
  "version": "0.2.3",
  "description": "The module of reporting to the console of webpack stats data.",
  "keywords": [
    "mornya",
    "vessel",
    "node",
    "webpack",
    "stats",
    "console",
    "reporter",
    "formatter",
    "consoleize",
    "front-end",
    "back-end"
  ],
  "homepage": "https://github.com/mornya/webpack-stats",
  "bugs": "https://github.com/mornya/webpack-stats/issues",
  "license": "MIT",
  "author": "mornya <mornya78@gmail.com>",
  "private": false,
  "repository": "https://github.com/mornya/webpack-stats.git",
  "main": "./dist/index.js",
  "types": "./dist",
  "scripts": {
    "setup": "husky install && lintest install || exit 0",
    "prepublishOnly": "vessel prepublish",
    "login": "vessel login",
    "clean": "vessel clean",
    "build": "vessel build",
    "watch": "vessel build --watch",
    "check": "vessel check",
    "init": "lintest uninstall && lintest export",
    "lint": "lintest lint",
    "lint:fix": "lintest lint --fix",
    "test": "lintest test",
    "test:watch": "lintest test --watch",
    "test:coverage": "lintest test --coverage",
    "sonar": "sonar-scanner"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
    "dist",
    "!dist/test",
    "!dist/**/@setup.d.ts",
    "!dist/**/@setup.js",
    "!dist/**/*.test.d.ts",
    "!dist/**/*.test.js",
    "CHANGELOG.md",
    "README.md",
    "LICENSE"
  ],
  "type": "commonjs",
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cliui": "^8.0.1"
  },
  "devDependencies": {
    "@lintest/core": "^1.14.0",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.10",
    "@types/webpack": "^5.28.4",
    "@types/webpack-env": "^1.18.3",
    "eslint": "^8.52.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0"
  },
  "lint-staged": {
    "*.{css,scss}": [
      "prettier --write --ignore-path .prettierignore"
    ],
    "*.{ts,tsx}": [
      "prettier --write --ignore-path .prettierignore",
      "npm run check",
      "npm run lint"
    ]
  },
  "vessel": {
    "minVersion": "5.0.0"
  }
}
